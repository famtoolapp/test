<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true"
    tools:context=".ui.activities.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/hello_there_nwelcome_back1"
            android:textColor="@color/dark_text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/child_name"
            android:textColor="@color/dark_text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <EditText
            android:id="@+id/edit_new_child"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/dark_input_background"
            android:drawableStart="@drawable/ic_person_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_text_secondary"
            android:hint="@string/new_or_current_child"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@color/dark_text_primary"
            android:textColorHint="@color/dark_text_secondary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_child_name" />

        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/email_address1"
            android:textColor="@color/dark_text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_new_child" />

        <EditText
            android:id="@+id/edit_login_email"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/dark_input_background"
            android:drawableStart="@drawable/ic_email_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_text_secondary"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="@color/dark_text_primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_email" />

        <TextView
            android:id="@+id/label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/password1"
            android:textColor="@color/dark_text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_login_email" />

        <EditText
            android:id="@+id/edit_login_password"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/dark_input_background"
            android:drawableStart="@drawable/ic_lock_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_text_secondary"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/dark_text_primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_password" />

        <Button
            android:id="@+id/btn_login_signin"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dark_button_background"
            android:text="@string/sign_in1"
            android:textColor="@color/dark_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_login_password" />

        <TextView
            android:id="@+id/txt_login_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/new_here_sign_up_instead1"
            android:textColor="@color/dark_text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_signin" />

        <!-- **** बदला हुआ कोड: पुराना और छिपा हुआ स्पिनर कंटेनर हटा दिया गया है **** -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
